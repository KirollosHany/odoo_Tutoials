<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <!-- Define the form view for hr.employee -->
        <record id="view_hr_employee_form_last_sign_in" model="ir.ui.view">
            <field name="name">hr.employee.form.last_sign_in</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form" />
            <field name="arch" type="xml">
                <xpath expr="//form/sheet/notebook/page[1]" position="inside">
                    <group>
                        <field name="last_sign_in" readonly="1"/>
                    </group>
                </xpath>
            </field>
        </record>
</odoo>
